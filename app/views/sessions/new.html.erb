<div class="row">
  <div class="col"></div>
  <div class="col-6 justify-content-center" style="text-align: center">
    <h1>log in</h1>

    <%= form_tag sessions_path do %>
      <div>
        <%= text_field_tag :email, "",
            placeholder: "Email",
            required: true %>
      </div>
      <div>
        <%= password_field_tag :password, "",
            placeholder: "Password",
            required: true %>
      </div>
      <%= submit_tag "Log In" %>
    <% end %>

    <div>
      <%= link_to "Sign up", signup_url %>
    </div>
  </div>
  <div class="col"></div>

</div>
